<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    tools:context="esiea.org.app.Activities.ConsultantActivity"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/nameArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/nameLabel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/firstName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/firstname"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="nico"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/lastNameArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/nameArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/lastNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lastName"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/lastname"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="gossart"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/emailArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/lastNameArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/emailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/email"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="nico@gmail.com"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/jobArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/emailArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/jobLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/job"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="dÃ©veloppeur"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cityArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/jobArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/cityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/city"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Paris"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/ageArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/cityArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/age"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/competenceArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/ageArea">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/competenceLabel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/competence"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/competence"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>




    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/edit"
        android:background="#00c893"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="normal|bold"
        android:onClick="modifier"/>


</RelativeLayout>
